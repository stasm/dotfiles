[user]
	name = Staś Małolepszy\n
	email = stas@mozilla.com

[core]
    excludesfile = ~/.gitignore_global
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol

[color]
    ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow
    frag = magenta
    old = red
    new = green
    whitespace = red reverse
[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    lg = log -p
    l = log --graph --decorate --abbrev-commit --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --date=relative
    ll = log --graph --decorate --abbrev-commit
    lll = log --graph --decorate --abbrev-commit --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --date=relative --all
    llll = log --graph --decorate --abbrev-commit --all
    changelog = log --pretty=format:'%s'
    ls = ls-files

[diff]
    context = 8
[push]
	default = simple
[giggle]
	main-window-maximized = false
	main-window-geometry = 1674x1063+1681+120
	history-view-vpane-position = 516
	main-window-view = HistoryView
[rerere]
	enabled = true
